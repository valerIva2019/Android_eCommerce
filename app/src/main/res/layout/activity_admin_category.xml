<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_below="@id/slogan_category"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/t_shirts"
            android:src="@drawable/tshirts"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:src="@drawable/sports"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/female_dresses"
            android:src="@drawable/female_dresses"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/sweathers"
            android:src="@drawable/sweather"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_below="@id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/glasses"
            android:src="@drawable/glasses"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:src="@drawable/purses_bags"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/hats_caps"
            android:src="@drawable/hats"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/shoes"
            android:src="@drawable/shoes"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_below="@id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/headphones_handfree"
            android:src="@drawable/headphones"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/laptops_pc"
            android:src="@drawable/laptops"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/watches"
            android:src="@drawable/watches"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/mobile_phones"
            android:src="@drawable/mobiles"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp" />

    </LinearLayout>

</RelativeLayout>